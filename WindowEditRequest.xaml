        <TextBlock x:Name="textBlockId" HorizontalAlignment="Left" Margin="114,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxMessage" HorizontalAlignment="Left" Margin="113,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Height="42"/>
        <TextBlock x:Name="textBlockMessage" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Комментарий" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxParts" HorizontalAlignment="Left" Margin="113,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Height="42"/>
        <TextBlock x:Name="textBlockParts" HorizontalAlignment="Left" Margin="10,220,0,0" TextWrapping="Wrap" Text="Детали" VerticalAlignment="Top"/>

    </Grid>
</Window>
