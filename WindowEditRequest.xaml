        mc:Ignorable="d"
        Title="Измененить заявку" Height="363" Width="292" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="comboBoxStatus" HorizontalAlignment="Left" Margin="113,127,0,0" VerticalAlignment="Top" Width="141" Height="22"/>
        <TextBox x:Name="textBoxDesc" HorizontalAlignment="Left" Margin="113,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Height="42"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="id"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,53,0,0" TextWrapping="Wrap" Text="Описание" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,96,0,0" TextWrapping="Wrap" Text="Мастер" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,127,0,0" TextWrapping="Wrap" Text="Статус" VerticalAlignment="Top"/>

        <Button x:Name="buttonEdit" Content="Изменить" HorizontalAlignment="Left" Margin="76,273,0,0" VerticalAlignment="Top" FontSize="16" Click="buttonEdit_Click"/>
